<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".users.SignupActivity">


        <ImageView
            android:id="@+id/BulsuXplore"
            android:layout_width="359dp"
            android:layout_height="29dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="35dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bulsuxplore" />


        <EditText
            android:id="@+id/visitorFullName"
            android:hint="Full Name"
            android:inputType="textCapWords"
            android:textDirection="firstStrong"
            android:textColor="@color/black"
            android:backgroundTint="@color/black"
            android:drawableLeft="@drawable/person_icon"
            android:drawablePadding="13dp"
            android:layout_width="327dp"
            android:layout_height="50dp"
            android:translationX="43dp"
            android:layout_marginTop="191dp" />

        <EditText
            android:id="@+id/visitorPhoneNumber"
            android:hint="Phone Number"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/black"
            android:backgroundTint="#666456"
            android:drawableLeft="@drawable/phone_icon"
            android:drawablePadding="13dp"
            android:layout_width="327dp"
            android:layout_height="50dp"
            android:translationX="43dp"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/visitorverifyRedirect"
            android:text="GET OTP"
            android:backgroundTint="@color/blue"
            app:cornerRadius="5dp"
            android:translationX="43dp"
            android:layout_marginTop="72dp"
            android:layout_width="327dp"
            android:layout_height="48dp" />


</LinearLayout>