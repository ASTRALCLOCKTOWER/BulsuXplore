<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/building_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Federizo Hall"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">


    </TextView>

    <ImageView
        android:id="@+id/building_drawing"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:scaleType="fitEnd"
        android:src="@drawable/list_e_library"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/building_college"></ImageView>

    <TextView
        android:id="@+id/building_desc"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="50dp"
        android:lineHeight="20dp"
        android:justificationMode="inter_word"
        android:text="Federizo Hall is a university building that serves as a multi-purpose facility. It houses classrooms, laboratories, and administrative offices. The building is equipped with state-of-the-art technology and resources to support various academic programs. Federizo Hall also features conference rooms and other event spaces that can accommodate a range of activities"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/building_drawing">

    </TextView>

